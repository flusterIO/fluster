{
    "productName": "fluster",
    "version": "0.1.0",
    "identifier": "com.fluster.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "trayIcon": {
            "iconPath": "icons/Square310x310Logo.png"
        },
        "windows": [
            {
                "title": "Fluster",
                "titleBarStyle": "Overlay",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                {
                    "identifier": "draggable-window",
                    "windows": [
                        "*"
                    ],
                    "permissions": [
                        "core:window:allow-start-dragging"
                    ]
                }
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
