{
    "productName": "fluster",
    "version": "0.1.0",
    "identifier": "com.fluster.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Fluster",
                "titleBarStyle": "Overlay",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                {
                    "identifier": "draggable-window",
                    "windows": [
                        "*"
                    ],
                    "permissions": [
                        "core:window:allow-start-dragging"
                    ]
                }
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/logo/Assets.xcassets/AppIcon.appiconset/32.png",
            "icons/logo/Assets.xcassets/AppIcon.appiconset/128.png",
            "icons/logo/Assets.xcassets/AppIcon.appiconset/256.png",
            "icons/logo/appstore.png",
            "icons/logo/playstore.png",
            "icons/logo/android/mipmap-hdpi/ic_launcher.png",
            "icons/logo/android/mipmap-mdpi/ic_launcher.png",
            "icons/logo/android/mipmap-xhdpi/ic_launcher.png",
            "icons/logo/android/mipmap-xxhdpi/ic_launcher.png",
            "icons/logo/android/mipmap-xxxhdpi/ic_launcher.png"
        ]
    }
}
