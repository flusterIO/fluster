{
    "name": "fluster.io",
    "scripts": {
        "release": "wireit",
        "ci:publish": "wireit"
    },
    "wireit": {
        "release": {
            "command": "changeset publish",
            "clean": false,
            "dependencies": [
                "build:all"
            ]
        },
        "publish:fluster_ts": {
            "command": "pnpm publish ./packages/fluster_ts"
        },
        "ci:publish:fluster_developer": {
            "command": "pnpm publish ./packages/fluster_developer --no-git-checks"
        },
        "ci:publish": {
            "dependencies": [
                "ci:publish:fluster_developer"
            ]
        }
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.4",
        "@tailwindcss/vite": "4.1.7",
        "@types/node": "22.14.1",
        "@types/react": "19.1.5",
        "@types/react-dom": "19.1.5",
        "@vitejs/plugin-react": "4.3.4",
        "@vitest/coverage-v8": "^3.1.4",
        "glob": "11.0.1",
        "globals": "^16.0.0",
        "syncpack": "13.0.3",
        "tsup": "8.4.0",
        "vite": "6.0.3",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-eslint": "1.8.1",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "3.1.2",
        "wireit": "0.14.12"
    },
    "pnpm": {
        "overrides": {
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "@types/react": "19.1.5",
            "@types/react-dom": "19.1.5"
        }
    },
    "packageManager": "pnpm@9.7.1+sha512.faf344af2d6ca65c4c5c8c2224ea77a81a5e8859cbc4e06b1511ddce2f0151512431dd19e6aff31f2c6a8f5f2aced9bd2273e1fed7dd4de1868984059d2c4247"
}
